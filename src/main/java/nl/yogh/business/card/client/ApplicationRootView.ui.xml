<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:a="urn:import:nl.yogh.business.card.client.ui" xmlns:w="urn:import:nl.yogh.business.card.client.widget">
  <ui:with field="res" type="nl.yogh.business.card.client.resources.R.ApplicationResource" />
  <ui:style>
    .panel {
    background: #222;
    }
    .card {
    width: 450px;
    height: 250px;
    border-top: 10px solid green;
    background-color: #DDD;
    box-shadow: 2px 2px 2px gray;
    }
    .businessCard {
    position: absolute;
    width: 100%;
    height: 100%;
    }
  </ui:style>
  <g:FlowPanel styleName="{res.css.flex} {res.css.grow} {style.panel}">
    <a:BusinessCard addStyleNames="{style.businessCard}" />
    <w:BlockChainHexMatrix />
  </g:FlowPanel>
</ui:UiBinder>