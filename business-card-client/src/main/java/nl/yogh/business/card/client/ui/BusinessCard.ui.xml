<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field="res" type="nl.yogh.business.card.client.resources.R.ApplicationResource" />
  <ui:style>
    .card {
    width: 450px;
    height: 250px;
    border-top: 10px solid #21B6D8;
    background-color: rgba(33, 182, 216, 0.3);
    box-shadow: 2px 2px 2px gray;
    }
    .title {
    font-size: 96px;
    font-weight: bold;
    color: white;
    }
    .name {
    text-decoration: none;
    color: white;
    }
    .info {
    margin: 7px;
    font-weight: bold;
    }
    .email {
    color: red;
    }
  </ui:style>
  <g:FlowPanel styleName="{res.css.flex} {res.css.grow} {res.css.alignCenter} {res.css.justifyCenter}">
    <g:FlowPanel styleName="{style.card} {res.css.flex} {res.css.alignCenter} {res.css.spaceAround}">
      <g:Label text="Yogh" styleName="{style.title}" />
      <g:FlowPanel styleName="{res.css.flex} {res.css.columns}">
        <g:Anchor href="https://onename.com/jornc" text="Jorn C" target="_blank" styleName="{style.info} {style.name}" />
        <g:Anchor href="mailto:jorn@yogh.nl" text="jorn@yogh.nl" styleName="{style.info} {style.email}" />
      </g:FlowPanel>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>
